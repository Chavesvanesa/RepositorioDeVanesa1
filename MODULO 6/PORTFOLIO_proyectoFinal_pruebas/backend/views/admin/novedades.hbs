<div class="holder" style="margin-top: 5em;">

  <div class="holder personas">
    {{!--login--}}
    <div class="clase-11 texto1">
      <div class="col texto">
        <h1>"Hola {{usuario}} ! <a href="/admin/login/logout" class="btn-sm btn-danger"
            style="background-color: darkgoldenrod;">Cerrar sesión<i class="fa fa-sign-out"></i></a></h1>
      </div>
      {{!--fin login--}}
    </div>
    <div class="clase-11 novedades">
      {{!--titulo de novedades--}}
      <div class="row">
        <div class="col-7 texto">
          <h3>Listado de Novedades</h3>
        </div>
        {{!--fin titulo de novedades--}}
        {{!--inicio boton nuevo--}}
        <div class="col-5 text-end texto1">
          <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus">Nuevo</i></a>
        </div>
        {{!--fin boton nuevo--}}
      </div>

    </div>
  </div>

  {{!--fila3--}}
  <div class="row">
    <div class="col">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Título</th>
            <th scope="col">Imagen</th>
            <th scope="col" class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{titulo}}</td>
            <td>{{{imagen}}}</td>
            <td class="text-center">
              <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i
                  class="fa fa-pencil-alt"></i></a>
            </td>
            <td class="text-center">
              <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i
                  class="fas fa-trash"></i></a>
            </td>

          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

</div>
{{!--fin fila3--}}


